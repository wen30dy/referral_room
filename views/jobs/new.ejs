<%-include('../partials/header')%>
<h3>New Job</h3>
<form action="/jobs" method="POST">
    <div class="form-group">
        <input class='form-control' type="text" name="job[name]" placeholder="Job">
    </div>
    <div class="form-group">
        <input class='form-control' type="text" name="job[image]" placeholder="image url">
    </div>
    <div class="form-group">
        <textarea class='form-control' name="job[description]" placeholder="job description"></textarea>
       
    </div>
    <div class="form-group">
        <button class="btn btn-success btn-block">Submit</button>
    </div>
</form>


<%-include('../partials/footer')%>