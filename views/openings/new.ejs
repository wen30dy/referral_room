<%-include('../partials/header')%>
<h3>New opening</h3>
<form action="/internal-openings" method="POST">
    <div class="form-group">
        <input class='form-control no-outline' type="text" name="opening[name]" placeholder="opening">
    </div>
    <div class="form-group">
        <input class='form-control no-outline' type="text" name="opening[image]" placeholder="image url">
    </div>
    <div class="form-group">
        <textarea class='form-control no-outline' name="opening[description]" placeholder="opening description"></textarea>
       
    </div>
    <div class="form-group">
        <button class="btn btn-success btn-block">Submit</button>
    </div>
</form>


<%-include('../partials/footer')%>